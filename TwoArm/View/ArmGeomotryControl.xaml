<UserControl x:Class="TwoArm.View.ArmGeomotryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwoArm.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Canvas Width="{Binding ArmLength}" Height="{Binding GeoWidth}">
        <Line X1="50" Y1="20" X2="175" Y2="30" Stroke="Black" StrokeThickness="4"/>
        <Line X1="50" Y1="80" X2="175" Y2="70" Stroke="Black" StrokeThickness="4"/>
        <Ellipse  Width="{Binding BigCircleDiameter}"  StrokeThickness="6" Stroke="Tan" Fill="AliceBlue" Height="{Binding BigCircleDiameter}" />
        <Ellipse Width="{Binding SmallCircleDiameter}" Margin="150,25" Height="{Binding SmallCircleDiameter}" Fill="AliceBlue" StrokeThickness="6" Stroke="Tan" />
    </Canvas>
</UserControl>
