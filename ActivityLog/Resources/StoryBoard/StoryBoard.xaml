<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Storyboard x:Key="showDW1">
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" Duration="0:0:0.05">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[1].Angle"
                        From="-90" To="0" Duration="0:0:0.2" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                        From="0" To="1" Duration="0:0:0.2" 
                        AccelerationRatio="1">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                        From="0" To="1" Duration="0:0:0.2" 
                        AccelerationRatio="1">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                        To="0.98" BeginTime="0:0:0.2" Duration="0:0:0.05" 
                        DecelerationRatio="1">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                        To="0.98" BeginTime="0:0:0.2" Duration="0:0:0.05" 
                        DecelerationRatio="1">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                        To="1" BeginTime="0:0:0.25" Duration="0:0:0.2"  
                        AccelerationRatio="1">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"              
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                        To="1" BeginTime="0:0:0.25" Duration="0:0:0.2" 
                        AccelerationRatio="1">
        </DoubleAnimation>
    </Storyboard>

    <!--原始的旋转回去样例-->
    <Storyboard x:Key="closeDW0"  >
        <DoubleAnimation Storyboard.TargetName="MainBorder" 
                      Storyboard.TargetProperty="RenderTransform.Children[1].Angle"
                      To="180" Duration="0:0:0.3" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder" 
                      Storyboard.TargetProperty="Opacity"
                      To="0" Duration="0:0:0.3">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder" 
                      Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                      To="0" Duration="0:0:0.3" AccelerationRatio="1">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                      Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                      To="0" Duration="0:0:0.3" AccelerationRatio="1">
        </DoubleAnimation>
    </Storyboard>


    <!--转出来-->
    <Storyboard x:Key="showDW2">
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" Duration="0:0:0.2">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[1].Angle"
                        From="180" To="0" Duration="0:0:0.2" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                        From="0.2" To="1" Duration="0:0:0.2" 
                        AccelerationRatio="1">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                        From="0.2" To="1" Duration="0:0:0.2" 
                        AccelerationRatio="1">
        </DoubleAnimation>
    </Storyboard>
    <!--弹出来-->
    <Storyboard x:Key="showDW3">
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[1].Angle"
                        From="180" To="0" Duration="0:0:0.2" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="Opacity"
                        From="0" To="1" Duration="0:0:0.2">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                        From="0.2" To="0.5" Duration="0:0:0.05" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                        From="0.2" To="0.5" Duration="0:0:0.05" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                          From="0.5" To="1" Duration="0:0:0.1" BeginTime="0:0:0.05" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                         From="0.5" To="1" Duration="0:0:0.1" BeginTime="0:0:0.05">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                          From="1" To="1.02" Duration="0:0:0.15" BeginTime="0:0:0.15" AutoReverse="True" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                         From="1" To="1.02" Duration="0:0:0.15" BeginTime="0:0:0.15" AutoReverse="True" >
        </DoubleAnimation>
    </Storyboard>
    <!--转回去-->
    <Storyboard x:Key="closeDW1"  >
        <DoubleAnimation Storyboard.TargetName="MainBorder" 
                      Storyboard.TargetProperty="RenderTransform.Children[1].Angle"
                      To="180" Duration="0:0:0.2" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder" 
                      Storyboard.TargetProperty="Opacity"
                      To="0" Duration="0:0:0.2">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder" 
                      Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                      To="0.2" Duration="0:0:0.2" AccelerationRatio="1">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                      Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                      To="0.2" Duration="0:0:0.2" AccelerationRatio="1">
        </DoubleAnimation>
    </Storyboard>

    <!--弹回去-->
    <Storyboard x:Key="closeDW2"  > 
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                        From="1" To="1.2" Duration="0:0:0.04"  AutoReverse="True">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                        From="1" To="1.2" Duration="0:0:0.04"  AutoReverse="True">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                          From="1" To="0.5" Duration="0:0:0.04" BeginTime="0:0:0.04" >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                         From="1" To="0.5" Duration="0:0:0.04" BeginTime="0:0:0.04">
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                         From="0.5" To="0" Duration="0:0:0.04" BeginTime="0:0:0.08"  >
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetName="MainBorder"
                        Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                        From="0.5"  To="0" Duration="0:0:0.04" BeginTime="0:0:0.08" >
        </DoubleAnimation>
    </Storyboard>
</ResourceDictionary>